pipeline {
	agent none
	tools {
		maven 'mvn-3.6.3'
		}
	stages {
		stage('Build') {
			agent {
				node {
					label 'java'
				}
			}
		steps {
				sh 'mvn compile'
			}
		post {
			success {
              stash(name: 'Java', includes: 'target/**')
              archiveArtifacts 'target/*.jar'
            }
          }
        }
		stage('Fluffy Test') {
			parallel {
				stage('Backend Java') {
					agent {
						node {
							label 'java'
						}
					}
					steps {
						unstash 'Java'
						sh 'mvn test'
					}
					post {
						always {
							junit 'target/surefire-reports/**/TEST*.xml'
						}
					}
				}
				stage('Frontend') {
					agent {
						node {
							label 'java'
						}
					}
					steps {
						unstash 'Java'
						sh 'echo frontend'
					}
					post {
						always {
							junit 'target/test-results/**/TEST*.xml'
						}
					}
				}
				stage('Performance Java') {
					agent {
						node {
							label 'java'
						}
					}
					steps {
						unstash 'Java'
						sh 'echo performancetest'
					}
				}
				stage('Static Java') {
					agent {
						node {
							label 'java'
						}
					}
					steps {
						unstash 'Java'
						sh 'echo staticjava'
					}
				}
			}
		}	
    stage('Confirm Deploy') {
      when {
        branch 'master'
      }
      steps {
        timeout(time: 3, unit: 'MINUTES' ) {
          input(message: "Okay to Deploy to Staging?", ok: "Let's Do it!")
        }
      }
   }
    stage('Fluffy Deploy') {
      when {
        branch 'master'
      }
      agent {
        node {
          label 'java'
        }
      }
      steps {
        unstash 'Java'
        sh "mvn install"
      }
    }
  }
  parameters {
    string(name: 'DEPLOY_TO', defaultValue: 'dev', description: '')
  }
}
